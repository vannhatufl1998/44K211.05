<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style>
        .navbar {
            color: darkgrey;
            font-size:30px;

        }

    </style>
</head>
<body style="background-color:white; color: grey">
    <div class="navbar navbar-light navbar-fixed-top" style="background-color: white;">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <div class="container">
                    <div></div>
                    <span class="label label-default" style="background-color:white;color:gray;font-size:13px;">44K21.105| TEAM </span>
                    <span class="label label-default" style="background-color:royalblue;font-size:13px;">WEBSITE</span>
                    <span class="label label-default" style="background-color:teal;font-size:13px;">NÔNG TRẠI</span>
                    <span class="label label-default" style="background-color:chocolate;font-size:13px;">TIỆN ÍCH</span>
                    <span class="label label-default" style="background-color:indianred;font-size:13px;">NHÀ NÔNG</span>
                </div>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer style="text-align:center">
            <p>&copy; @DateTime.Now.Year -| HAPPYFARM | | Team 44K21.1</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryval")
    @RenderSection("scripts", required: false)
</body>
</html>
